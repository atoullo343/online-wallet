<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header.ejs') %>

<body>

<%- include('./partials/nav.ejs') %>

<h1 class="text-center text-info" style="color: grey;">Ro'yxatdan o'tish ! <i class="fas fa-sign-in-alt large"></i></h1>
<div class="container" style="width:40%">
<%- include('./partials/messages.ejs') %>

    <form action="/register" method="POST">
     
        <div class="form-group">
            <label for="name" class="text-info">Ism</label>
            <input
            placeholder="Ismingizni kiriting..."
              type="name"
              id="name"
              name="name"
              class="form-control"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email" class="text-info">Email</label>
            <input
            placeholder="Email kiriting..."
              type="email"
              id="email"
              name="email"
              class="form-control"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password" class="text-info">Parol</label>
            <input
            placeholder="6 belgidan kam bo'lmagan parol kiriting..."
              type="password"
              id="password"
              name="password"
              class="form-control"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <button type="submit" class="btn  btn-outline-info" style="float: right;">
            Jo'natish
          </button>
    </form><br><br>
    <p><span style="color: brown;">Hisobingiz mavjudmi? </span><a class="btn btn-outline-info" href="/login">Login</a></p>
</div>

<%- include('./partials/footer.ejs') %>

</body>
</html>